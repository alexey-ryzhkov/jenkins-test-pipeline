@Library('test-library@main') _
pipeline{
    agent any
    parameters {

        choice(
            choices: ['on' , 'off'],
            description: '',
            name: 'UNIT_TESTS'
        )
    }            

    stages{
        stage("Checking hostname on master"){
            agent {
                label "master"
            }
            steps{
                sh "hostname"
            }
        }
        stage("Testing paralel jobs"){
            failFast false
            parallel {
                stage("First command"){
                    steps {
                    sh "echo test > test.txt"
                    sh "sleep 5"
                    }
                }
                stage("Second command"){
                    

                    steps {
                        script {
                            testlib.unit_function "${params.UNIT_TESTS}"
                        }

#                        catchError(buildResult: 'Unstable', stageResult: 'FAILURE'){
#                        sh "cat test12312323.txt"
#                        }
                    }
                }
                stage("Third command"){
                    steps {
                    sh "date"
                    sh "sleep 5"
                    }
                }
            }
        }
        stage("Checking hostname on node"){
            agent {
                label "linux"
            }
            steps {
                sh "hostname"
            }
        }
    }
}